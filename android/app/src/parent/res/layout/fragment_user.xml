<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/ic_user_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="@dimen/avatar_width"
            android:layout_height="@dimen/avatar_width"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="17dp"
            android:padding="@dimen/avatar_border_width"
            android:src="@drawable/ic_default_teacher_avatar"
            android:background="@drawable/bg_all_circle_white"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_edit_name"
            android:text=""
            android:textColor="#82b4d9"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_my_collection"
                android:layout_marginTop="13dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_my_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_collection"
                android:layout_marginTop="17dp"
                android:layout_below="@id/iv_my_collection"
                android:textColor="@color/item_text_color_normal"
                android:textSize="@dimen/text_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的收藏" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_my_orders"
                android:layout_marginTop="13dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_my_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_orders"
                android:layout_below="@id/iv_my_orders"
                android:layout_marginTop="17dp"
                android:textColor="@color/item_text_color_normal"
                android:textSize="@dimen/text_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="我的订单" />

            <ImageView
                android:id="@+id/tv_unpaid_orders"
                android:layout_toRightOf="@id/tv_my_orders"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unpaid_orders"
                android:scaleType="centerInside"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_my_comment"
                android:layout_marginTop="13dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_my_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_comment"
                android:layout_below="@id/iv_my_comment"
                android:layout_marginTop="17dp"
                android:textColor="@color/item_text_color_normal"
                android:textSize="@dimen/text_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="我的评价" />
            <ImageView
                android:id="@+id/tv_uncomment_course"
                android:layout_toRightOf="@id/tv_my_comment"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_uncomment_course"
                android:scaleType="centerInside"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_user_schoolship"
        style="@style/mala.widget.user.item"
        android:layout_marginTop="12dp"
        android:background="@color/colorWhite">

        <TextView
            style="@style/mala.widget.usercenter.item.text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="我的奖学金" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:scaleType="center"
            android:src="@drawable/ic_more_info" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_about_mala"
        style="@style/mala.widget.user.item"
        android:layout_marginTop="12dp"
        android:background="@color/colorWhite">

        <TextView
            style="@style/mala.widget.usercenter.item.text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="关于麻辣老师" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:scaleType="center"
            android:src="@drawable/ic_more_info" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/logout_btn"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xlarge" />
</LinearLayout>