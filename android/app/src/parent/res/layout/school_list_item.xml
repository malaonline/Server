<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_experience_center"
    android:paddingTop="@dimen/layout_margin_top"
    android:paddingBottom="@dimen/layout_margin_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_school_pic"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:scaleType="centerCrop"
         />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_school_name"
            android:textColor="@color/color_black_636363"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="@dimen/school_margin_normal"
            android:layout_marginLeft="@dimen/school_margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_school_address"
            android:textColor="@color/color_black_939393"
            android:textSize="@dimen/text_size_small"
            android:layout_marginBottom="@dimen/school_margin_normal"
            android:layout_marginLeft="@dimen/school_margin_normal"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_school_distance"
            android:textColor="@color/color_black_939393"
            android:textSize="@dimen/text_size_small"
            android:layout_marginBottom="@dimen/school_margin_normal"
            android:layout_marginRight="@dimen/school_margin_normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>