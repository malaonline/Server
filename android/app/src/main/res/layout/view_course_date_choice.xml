<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <com.malalaoshi.android.course.BorderTextView
                style="@style/mala.widget.course.title.attr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/course_date_height"
                android:text="时间"
                app:BorderColor="@color/theme_blue"
                app:BottomBorder="1dp"
                app:LeftBorder="1dp"
                app:RightBorder="1dp"
                app:TopBorder="1dp" />

            <com.malalaoshi.android.course.BorderTextView
                android:id="@+id/tv_section1"
                style="@style/mala.widget.title.text.smallest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/course_date_height"
                android:gravity="center"
                android:text="08:00\n10:00"
                android:textColor="#636363"
                app:BorderColor="@color/theme_blue"
                app:BottomBorder="1dp"
                app:LeftBorder="1dp"
                app:RightBorder="1dp" />

            <com.malalaoshi.android.course.BorderTextView
                android:id="@+id/tv_section2"
                style="@style/mala.widget.title.text.smallest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/course_date_height"
                android:gravity="center"
                android:text="10:30\n12:30"
                android:textColor="#636363"
                app:BorderColor="@color/theme_blue"
                app:BottomBorder="1dp"
                app:LeftBorder="1dp"
                app:RightBorder="1dp" />

            <com.malalaoshi.android.course.BorderTextView
                android:id="@+id/tv_section3"
                style="@style/mala.widget.title.text.smallest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/course_date_height"
                android:gravity="center"
                android:text="13:30\n15:30"
                android:textColor="#636363"
                app:BorderColor="@color/theme_blue"
                app:BottomBorder="1dp"
                app:LeftBorder="1dp"
                app:RightBorder="1dp" />

            <com.malalaoshi.android.course.BorderTextView
                android:id="@+id/tv_section4"
                style="@style/mala.widget.title.text.smallest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/course_date_height"
                android:gravity="center"
                android:text="15:30\n17:30"
                android:textColor="#636363"
                app:BorderColor="@color/theme_blue"
                app:BottomBorder="1dp"
                app:LeftBorder="1dp"
                app:RightBorder="1dp" />

            <com.malalaoshi.android.course.BorderTextView
                android:id="@+id/tv_section5"
                style="@style/mala.widget.title.text.smallest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/course_date_height"
                android:gravity="center"
                android:text="18:00\n20:00"
                android:textColor="#636363"
                app:BorderColor="@color/theme_blue"
                app:BottomBorder="1dp"
                app:LeftBorder="1dp"
                app:RightBorder="1dp" />

        </LinearLayout>

        <com.malalaoshi.android.course.GridViewForScrollView
            android:id="@+id/grid_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="21"
            android:numColumns="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_course_valid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="30dp"
            android:text="可选"
            android:textColor="#939393"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_course_sold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="30dp"
            android:text="已售"
            android:textColor="#939393"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_course_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="30dp"
            android:text="已选"
            android:textColor="#939393"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_course_buy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="2dp"
            android:text="已买"
            android:textColor="#939393"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/iv_note"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/ic_course_note" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>