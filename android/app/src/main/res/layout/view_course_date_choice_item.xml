<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <com.malalaoshi.android.course.BorderTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/course_date_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="#fff"
        android:textSize="12sp"
        app:BorderColor="@color/theme_blue"
        app:BottomBorder="1dp"
        app:RightBorder="1dp"/>

    <ImageView
        android:id="@+id/iv_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@drawable/ic_course_bought"
        android:visibility="gone"/>
</FrameLayout>