<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="14dp">

    <TextView
        android:id="@+id/tv_name"
        style="@style/mala.widget.title.sub.text.mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="远处; 距离，路程; 疏远; " />

    <TextView
        android:id="@+id/tv_distance"
        style="@style/mala.widget.course.title.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_check"
        android:text="123" />

    <TextView
        android:id="@+id/tv_location"
        style="@style/mala.widget.course.title.text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:gravity="top|left"
        android:layout_toLeftOf="@+id/iv_check"
        android:layout_marginBottom="14dp"
        android:text="远处; 距离，路程; 疏远;远处; 距离，路程; 疏远;远处; 距离，路程; 疏远;远处; 距离，路程; 疏远;" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:src="@drawable/ic_check" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"
        android:layout_below="@+id/tv_location" />
</RelativeLayout>