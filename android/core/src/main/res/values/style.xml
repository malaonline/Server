<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="mala.widget.usercenter.title.text" parent="android:Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mala.widget.usercenter.edit" parent="android:Widget.EditText">
        <item name="android:textColor">#6c6c6c</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#cecece</item>
    </style>

    <style name="mala.widget.usercenter.warn.text" parent="android:Widget.TextView">
        <item name="android:textColor">#e26254</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="mala.widget.usercenter.button" parent="android:Widget.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/core__btn_post_verify_code_bk</item>
    </style>
</resources>